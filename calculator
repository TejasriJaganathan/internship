def add (a,b):
  return a+b
def sub(a,b):
  return a-b
def multiply(a,b):
  return a*b
def division(a,b):
  if b!=0:
    return a/b
  else:
    print("Error!Division by zero not possible")

print("This is a calculator program to perform basic arithmetics")
print("Choose the operation:")
print("1.Addition")
print("2.Subtraction")
print("3.Multiplication")
print("4.Division")
while True:
 num1=int(input("Enter a number 1:"))
 num2=int(input("Enter a number 2:"))
 choice=input("Enter your choice:(1/2/3/4/exit):")
 if choice=='1':
  sum=add(num1,num2)
  print("the sum is:",sum)
 elif choice=='2':
  difference=sub(num1,num2)
  print("The difference is:",difference)
 elif choice=='3':
  product=multiply(num1,num2)
  print("The product is",product)
 elif choice=='4':
  quotient=division(num1,num2)
  print("the quotient is",quotient)
 elif choice=='exit':
  print("Thanks for using the calculator!")
  break
 else:
  print("Invalid choice")

  
